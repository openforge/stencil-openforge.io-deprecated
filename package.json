{
  "name": "@openforge/main-website",
  "private": true,
  "version": "0.0.1",
  "description": "Website for OpenForge",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --prerender",
    "cz": "git-cz",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "lint": "tslint -p ./tsconfig.json --exclude '**/*.d.ts'",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "dependencies": {
    "@stencil/core": "^0.7.26",
    "@stencil/router": "^0.1.0",
    "bootstrap": "^4.1.0",
    "smoothscroll-polyfill": "^0.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@stencil/dev-server": "latest",
    "@stencil/sass": "0.0.3",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.10",
    "@types/smoothscroll-polyfill": "^0.3.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.22",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^21.2.1",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-react": "^3.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openforge/main-website.git"
  },
  "author": "OpenForge Team",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/openforge/main-website"
  },
  "homepage": "https://www.openforge.io",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
